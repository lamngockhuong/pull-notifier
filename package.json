{
  "name": "pull-notifier",
  "version": "0.0.1",
  "description": "pull-notifier server",
  "author": "me@ngockhuong.com",
  "license": "MIT",
  "scripts": {
    "husky:prepare": "husky install",
    "packages:update": "ncu -u",
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "start:debug": "cross-env NODE_ENV=development nodemon --config nodemon.debug.json",
    "build": "tsc && npx tsc-alias",
    "heroku-postbuild": "npm ci",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --config ./.prettierrc -c './*.json'",
    "prettier:fix": "npm run prettier -- --write",
    "prisma:init": "prisma init",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "prisma:generate": "prisma generate",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^3.6.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.2",
    "express": "^4.17.2",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jest": "^27.4.5",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pm2": "^5.1.2",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/config": "^0.0.40",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.0",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "node-config": "^0.0.2",
    "node-gyp": "^8.4.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prisma": "^3.6.0",
    "supertest": "^6.1.6",
    "tsconfig-paths": "^3.12.0"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  }
}
